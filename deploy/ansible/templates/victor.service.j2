[Unit]
Description=Victor AI API Server
Documentation=https://docs.victorai.com
After=network.target
Wants=network-online.target

[Service]
Type=notify
User={{ app_user }}
Group={{ app_group }}
WorkingDirectory={{ app_dir }}/victor
Environment="PATH={{ venv_dir }}/bin"
EnvironmentFile={{ app_dir }}/.env
ExecStart={{ venv_dir }}/bin/uvicorn victor.api.server:app \
    --host {{ service_host }} \
    --port {{ service_port }} \
    --workers {{ max_workers | default(1) }} \
    --log-level {{ log_level | default('info') }} \
    --access-log \
    --reload-delay 5
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30
Restart=always
RestartSec=10
StandardOutput=append:{{ log_dir }}/victor-api.log
StandardError=append:{{ log_dir }}/victor-api-error.log

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ app_dir }} {{ log_dir }}
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
AmbientCapabilities=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target
