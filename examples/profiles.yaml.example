# Example Victor Configuration
# Copy to ~/.victor/profiles.yaml to activate

profiles:
  default:
    provider: lmstudio
    model: qwen3-coder:30b
    temperature: 0.7
    max_tokens: 4096
    description: "Default profile with Qwen 30B coder model (LMStudio)"

  quick:
    provider: lmstudio
    model: qwen2.5-coder:7b
    temperature: 0.5
    max_tokens: 2048
    description: "Quick responses with lighter sampling on LMStudio"

providers:
  lmstudio:
    base_url:
      - http://127.0.0.1:1234      # Primary LMStudio server (localhost)
      # Add LAN servers as needed:
      # - http://your-lan-server:1234
    timeout: 300

  ollama:
    base_url:
      - http://localhost:11434     # Primary Ollama server
      # Add LAN servers as needed:
      # - http://your-lan-server:11434
    timeout: 300

  anthropic:
    api_key: ${ANTHROPIC_API_KEY}
    base_url: https://api.anthropic.com

# Tool Configuration
tools:
  # Disable problematic tools (code_review has aspect validation issues)
  disabled:
    - code_review

  # Individual tool configuration (optional)
  web_search:
    enabled: true

  security_scan:
    enabled: true

  docker:
    enabled: false  # Disable if not using Docker

# Web tools configuration
web_tools:
  summarize_fetch_top: 5
  summarize_fetch_pool: 10
  summarize_max_content_length: 50000
