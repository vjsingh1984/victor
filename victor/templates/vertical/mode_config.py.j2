"""{{ name_title }}-specific mode configurations using central registry.

This module registers {{ name }}-specific operational modes with the central
ModeConfigRegistry and exports a registry-based provider for protocol
compatibility.
"""

from __future__ import annotations

from typing import Dict

from victor.core.mode_config import (
    ModeConfig,
    ModeConfigRegistry,
    ModeDefinition,
    RegistryBasedModeConfigProvider,
)


# =============================================================================
# {{ name_title }}-Specific Modes (Registered with Central Registry)
# =============================================================================

_{{ name_upper }}_MODES: Dict[str, ModeDefinition] = {
    # Add vertical-specific modes here
    # Example:
    # "thorough": ModeDefinition(
    #     name="thorough",
    #     tool_budget=30,
    #     max_iterations=80,
    #     temperature=0.7,
    #     description="Thorough {{ name }} analysis",
    #     exploration_multiplier=2.0,
    # ),
}

# {{ name_title }}-specific task type budgets
_{{ name_upper }}_TASK_BUDGETS: Dict[str, int] = {
    "analyze": 12,
    "create": 8,
    "modify": 6,
    "general": 8,
}


# =============================================================================
# Register with Central Registry
# =============================================================================


def _register_{{ name }}_modes() -> None:
    """Register {{ name }} modes with the central registry."""
    registry = ModeConfigRegistry.get_instance()
    registry.register_vertical(
        name="{{ name }}",
        modes=_{{ name_upper }}_MODES,
        task_budgets=_{{ name_upper }}_TASK_BUDGETS,
        default_mode="default",
        default_budget=10,
    )


# =============================================================================
# Provider (Protocol Compatibility)
# =============================================================================


class {{ name_class }}ModeConfigProvider(RegistryBasedModeConfigProvider):
    """Mode configuration provider for {{ name }} vertical.

    Uses the central ModeConfigRegistry but provides {{ name }}-specific
    complexity mapping.
    """

    def __init__(self) -> None:
        """Initialize {{ name }} mode provider."""
        # Ensure registration (idempotent - handles singleton reset)
        _register_{{ name }}_modes()
        super().__init__(
            vertical="{{ name }}",
            default_mode="default",
            default_budget=10,
        )

    def get_mode_for_complexity(self, complexity: str) -> str:
        """Map complexity level to {{ name }} mode.

        Args:
            complexity: Complexity level

        Returns:
            Recommended mode name
        """
        mapping = {
            "trivial": "fast",
            "simple": "fast",
            "moderate": "default",
            "complex": "thorough",
            "highly_complex": "thorough",
        }
        return mapping.get(complexity, "default")


__all__ = [
    "{{ name_class }}ModeConfigProvider",
]
