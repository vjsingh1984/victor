/* Victor TUI Stylesheet */
/* Modern terminal UI theme inspired by claude-code and codex */

/* Root application styling */
Screen {
    background: $background;
}

/* Header styling */
Header {
    background: $primary;
    color: $text;
    height: 1;
    dock: top;
}

/* Footer styling */
Footer {
    background: $primary-darken-2;
    height: 1;
    dock: bottom;
}

/* Message container - main chat area */
MessageContainer {
    height: 1fr;
    padding: 1 0;
    background: $background;
    scrollbar-gutter: stable;
    scrollbar-size: 1 1;
}

/* User message styling */
UserMessage {
    background: $primary-darken-2;
    color: $text;
    margin: 1 2 0 2;
    padding: 1 2;
    border: round $success;
    width: 100%;
}

/* Assistant message styling */
AssistantMessage {
    background: $surface;
    color: $text;
    margin: 1 2 0 2;
    padding: 1 2;
    border: round $primary;
    width: 100%;
}

/* Chat input area */
ChatInput {
    dock: bottom;
    height: auto;
    min-height: 3;
    max-height: 10;
    background: $surface;
    border-top: solid $primary;
    padding: 0 1;
}

ChatInput Input {
    background: transparent;
    border: none;
    width: 1fr;
}

ChatInput Input:focus {
    border: none;
}

/* Status bar */
StatusBar {
    dock: bottom;
    height: 1;
    background: $primary-darken-3;
    color: $text-muted;
    padding: 0 1;
}

/* Tool indicator */
ToolIndicator {
    margin: 0 2;
    padding: 0 1;
    height: auto;
}

ToolIndicator.running {
    color: $warning;
}

ToolIndicator.success {
    color: $success;
}

ToolIndicator.error {
    color: $error;
}

/* Welcome panel styling */
.welcome-panel {
    margin: 2 4;
    padding: 2 4;
    border: round $primary;
    background: $surface;
    text-align: center;
}

/* Confirmation modal styling */
ConfirmationModal {
    align: center middle;
}

ConfirmationModal > Vertical {
    background: $surface;
    padding: 2 4;
    border: round $warning;
    width: 60;
    height: auto;
}

ConfirmationModal Button {
    margin: 1 2 0 2;
}

/* Markdown code blocks */
Markdown {
    margin: 0;
}

/* Scrollbar styling */
ScrollableContainer > .scrollbar {
    background: $primary-darken-3;
}

ScrollableContainer > .scrollbar--bar {
    background: $primary;
}
